
[MASTER]
# Basic settings
jobs=2
load-plugins=

[MESSAGES CONTROL]
# Disable certain messages that may be overly restrictive
disable=
    C0103, # Non-conforming name ID (e.g., variable in lowercase)
    R0801, # Duplicate code
    W0511, # TODO found
    R0903, # Too few public methods
    E1101, # Instance of ... has no ... member
    R0913, # Too many arguments

[DESIGN]
# Code design settings
max-attributes=10
max-args=5
max-parents=7
max-module-lines=1000

[FORMAT]
# Style and formatting
max-line-length=120

[TYPECHECK]
# Stricter type checks
ignore-mixin-members=yes
ignore-none=yes
ignored-modules=

[EXCEPTIONS]
# Exception handling
overgeneral-exceptions=builtins.BaseException, builtins.Exception
